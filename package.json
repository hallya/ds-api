{
  "name": "@hallya/ds-api",
  "version": "1.0.10",
  "description": "A Node.js library for interacting with Synology Download Station API",
  "main": "index.js",
  "type": "module",
  "bin": {
    "ds-api": "./bin/cli.js"
  },
  "scripts": {
    "start": "node bin/cli.js",
    "list": "node bin/cli.js list",
    "list:json": "node bin/cli.js list --json",
    "remove": "node bin/cli.js remove",
    "purge": "node bin/cli.js purge",
    "info": "node bin/cli.js info",
    "commit": "cz",
    "release": "npm run release:version && git push --follow-tags",
    "release:version": "standard-version",
    "release:publish": "pnpm publish --access public",
    "prepublishOnly": "npm run test",
    "test": "echo 'ðŸ§ª Basic syntax check - no automated tests yet, but code compiles successfully'"
  },
  "keywords": [
    "synology",
    "download-station",
    "api",
    "torrents",
    "nas",
    "api-client",
    "automation",
    "file-management"
  ],
  "files": [
    "lib/",
    "bin/",
    "index.js",
    "LICENSE",
    "README.md"
  ],
  "author": "Lucien Dulac",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hallya/ds-api.git"
  },
  "bugs": {
    "url": "https://github.com/hallya/ds-api/issues"
  },
  "homepage": "https://github.com/hallya/ds-api#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "joi": "^18.0.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.1",
    "commitizen": "^4.3.1",
    "semantic-release": "^25.0.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
