{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "imports": {
    "zod": "https://deno.land/x/zod@v3.23.8/mod.ts",
    "std/dotenv": "https://deno.land/std@0.224.0/dotenv/mod.ts",
    "std/log": "https://deno.land/std@0.224.0/log/mod.ts",
    "std/path": "https://deno.land/std@0.224.0/path/mod.ts",
    "std/fs": "https://deno.land/std@0.224.0/fs/mod.ts"
  },
  "tasks": {
    "test": "deno test --allow-all",
    "test:unit": "deno test --allow-all tests/unit",
    "test:integration": "deno test --allow-all tests/integration",
    "test:coverage": "deno test --allow-all --coverage=coverage",
    "test:watch": "deno test --allow-all --watch",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "fmt": {
    "files": {
      "include": ["lib/", "bin/", "tests/", "*.ts", "*.js"],
      "exclude": ["node_modules/", "coverage/"]
    }
  },
  "lint": {
    "files": {
      "include": ["lib/", "bin/", "tests/", "*.ts", "*.js"],
      "exclude": ["node_modules/", "coverage/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["tests/**/*.test.ts"],
    "exclude": ["node_modules/", "coverage/"],
    "coverage": {
      "exclude": ["tests/", "node_modules/", "coverage/", "bin/"]
    },
    "timeout": 30000
  }
}

