{
  "name": "@hallya/ds-api",
  "version": "1.5.1",
  "license": "MIT",
  "exports": "./index.ts",
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "nodeModulesDir": "auto",
  "imports": {
    "std/assert": "jsr:@std/assert@^1.0.15",
    "zod": "npm:zod@^3.23.8",
    "std/dotenv": "jsr:@std/dotenv@0.224.0",
    "pino": "npm:pino@^9.5.0",
    "pino-pretty": "npm:pino-pretty@^11.2.2",
    "std/path": "jsr:@std/path@0.224.0",
    "std/fs": "jsr:@std/fs@0.224.0",
    "@faker-js/faker": "npm:@faker-js/faker@9.3.0",
    "@test-setup": "./tests/setup.ts",
    "@mock-fetch": "jsr:@c4spar/mock-fetch@1.0.0",
    "@logger": "./lib/logger.ts"
  },
  "tasks": {
    "test": "deno test --allow-all --env-file=.env.test",
    "test:unit": "deno task test tests/unit",
    "test:integration": "deno task test tests/integration",
    "test:coverage": "deno task test --coverage=coverage",
    "test:watch": "deno task test --watch",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "fmt": {
    "files": {
      "include": [
        "lib/",
        "bin/",
        "tests/",
        "*.ts",
        "*.js"
      ],
      "exclude": [
        "node_modules/",
        "coverage/"
      ]
    }
  },
  "lint": {
    "include": [
      "lib/",
      "bin/",
      "tests/",
      "*.ts",
      "*.js"
    ],
    "exclude": [
      "node_modules/",
      "coverage/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "test": {
    "include": [
      "tests/**/*.test.ts"
    ],
    "exclude": [
      "node_modules/",
      "coverage/"
    ]
  }
}
